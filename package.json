{
  "name": "playwright-cucumber",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:api": "npx playwright test --grep @api",
    "test:visual": "npx playwright test --grep @visual",
    "test:a11y": "npx playwright test --grep @a11y",
    "test:performance": "npx playwright test --grep @performance",
    "test:integration": "npx playwright test src/tests/integration/",
    "test:update-visual": "npx playwright test --grep @visual --update-snapshots",
    "bdd": "cucumber-js src/bdd/features --require \"src/bdd/steps/**/*.ts\" --require \"src/bdd/support/**/*.ts\" --require-module ts-node/register --format progress",
    "bdd:headed": "cross-env HEADLESS=0 npm run bdd",
    "bdd:smoke": "cucumber-js src/bdd/features --require \"src/bdd/steps/**/*.ts\" --require \"src/bdd/support/**/*.ts\" --require-module ts-node/register --format progress --tags \"@smoke\"",
    "bdd:report": "node scripts/generate-cucumber-report.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@cucumber/cucumber": "^12.2.0",
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.56.1",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "axe-core": "^4.11.0",
    "axe-html-reporter": "^2.2.11",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-playwright": "^2.2.2",
    "joi": "^18.0.1",
    "license-checker": "^25.0.1",
    "multiple-cucumber-html-reporter": "^3.9.3",
    "playwright": "^1.56.1",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "optionalDependencies": {
    "fsevents": "^2.3.2"
  },
  "description": ""
}
